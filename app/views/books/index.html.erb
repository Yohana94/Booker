<p><%=notice%></p>
<h1>Books</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>2 errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<table>
 <thead>
    <tr>
      <th><strong>Title<strong></th>
      <th><strong>Body<strong></th>
      <th></th>
    </tr>
  </thead>
<tbody>
<div class="book-wrap">
<% @books.each do |book| %>
<div class="book-box">
<div class="book-comment">
    <tr>
      <td><span class="book-title"><%= book.title %></span></td>
      <td><span class="book-body"><%= book.body %></span></td>
      <td>
      <%= link_to "Show", book_path(book.id) %>
       <%= link_to "Edit", edit_book_path(book.id) %>
      <%= link_to "Destroy", book_path(book.id),method: :delete,"data-confirm"=>"Are sure for deleting?" %>
      <td>
    </tr>
</div>
</div>

<% end %>
</table>
<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %><br><br>

  <%= f.submit 'Create Book' %>
<% end %>

