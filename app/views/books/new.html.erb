<h1>New Book</h1>
<!-- form_with部分 -->
<% if @book.errors.any? %>
  <%= @book.errors.count %>2 errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books/edit', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %><br><br>

  <%= f.submit 'Creat Book' %>
<% end %>

